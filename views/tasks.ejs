<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>To Do List</title>

		<!-- External CSS -->
		<link rel="stylesheet" type="text/css" href="styles.css">

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Dancing+Script:wght@200&family=Roboto&display=swap" rel="stylesheet">

		<!-- BootStrap -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

		<!-- Font Awesome -->
		<script src="https://kit.fontawesome.com/e18f483567.js" crossorigin="anonymous"></script>
	</head>
	<body class="ovrd-boot">
		<!-- CHANGED -->
		<div class="image-div set-height">
		<!-- Progress Bar -->
			<div class="make-progress">
				<p class="progress-text">Progress</p>
				<div class="progress">
			  		<div class="progress-bar bg-success" role="progressbar" style="width: 0%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
			

			<p class="day-date"></p>
			<!-- Background image div -->
			<!-- <div class="image-div"></div> -->

			
			
			<!-- Main Content div -->
			<div class="content-container">
				<h1>Good Morning</h1>
				<h6><em>"<%= displayQuote %>"</em></h6>
				<!-- To add quote array here using JS-->
				<button type="button" class="btn btn-outline-success add-task-btn">+ Add new Task</button>			
			</div>

			<div class="row my-tasks">
				<% tasksLeft.forEach(function(task){ %>
						<div class="col-lg-2 col-md-3 col-sm-4 task-card">
							<div class="card">
					            <div class="card-header">
					            	<h4><%= task.title %></h4>
					            </div>
					            <div class="card-body">
									<p><%= task.description %></p>
									<div class="done-trash">
						                <button class="btn btn-success btn-sm done" type="button"><i class="fas fa-check-square"></i></button>
										<button class="btn btn-danger btn-sm trash" type="button"><i class="fas fa-trash-alt"></i></button>
									</div>
					            </div>
					        </div>
					    </div>
				<% }); %>
			</div>
		</div>

		<form action="/" method="post">
			<div class="form-group input-task">
				<strong><label>Title</label></strong>
				<input type="text" class="form-control" placeholder="New Task" name = "title" autocomplete="off" required>
				<p><em>0/30</em></p>
				<strong><label>Description</label></strong>
				<textarea class="form-control" name="description" row="8" placeholder="*Optional*"></textarea>
				<div class="add-cancel">
					<button type="submit" class="btn btn-success btn-sm add-btn">Add</button>
					<button type="button" class="btn btn-danger btn-sm cancel-btn">Cancel</button>
				</div>
			</div>
		</form>

		<!-- JQuery -->
		<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
		<!-- External JS -->
		<script type="text/javascript" src="index.js"></script>
		<!-- Bootstrap script -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
	</body>
</html>
